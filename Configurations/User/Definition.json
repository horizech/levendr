{
    "$schema": "./Schema.json",
    "JWT": {
        "JWTExpirationTime": {
            "Value": 7,
            "TimeType": "Days"
        },
        "JWTClaims": [
            {
                "Table": "Users",
                "Column": "Username",
                "ClaimType": "Name",
                "IncludeAs": "SingleValue"
            },
            {
                "Table": "Users",
                "Column": "Fullname",
                "ClaimType": "NameIdentifier",
                "IncludeAs": "SingleValue"
            },
            {
                "Table": "Users",
                "Column": "Id",
                "ClaimType": "SerialNumber",
                "IncludeAs": "SingleValue"
            },
            {
                "Table": "Users",
                "Column": "Email",
                "ClaimType": "Email",
                "IncludeAs": "SingleValue"
            },
            {
                "Table": "Roles",
                "Column": "Name",
                "ClaimType": "Role",
                "IncludeAs": "SingleValue"
            },
            {
                "Table": "Permissions",
                "Column": "Name",
                "ClaimType": "Authentication",
                "IncludeAs": "MultipleValues"
            }
        ]
    }
}